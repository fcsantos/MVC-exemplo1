@model Projeto.MVC.Models.LivroViewModelConsulta

@{
    ViewBag.Title = "Consulta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Lista de Livros</h2>
<br />
<div class="alert-danger">
    @Html.DisplayFor(model => model.MensagemErro)
</div>
<hr />
@if (Model.Livros.Count != 0)
{
    <table class="table table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdLivro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ISBN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sinopse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeAutor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeEditora)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Livros)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdLivro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ISBN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sinopse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeAutor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeEditora)
                </td>
                <td>
                    @Html.ActionLink("Atualizar", "Atualiza", new { id = item.IdLivro }) |
                    @Html.ActionLink("Deletar", "Deleta", new { id = item.IdLivro }, new { onclick = "return confirm('Tem certeza que deseja deletar?');" })
                </td>
            </tr>
        }
    </table>
}
else{
    <div class="alert-warning">
        Não tem registros.
    </div>
}